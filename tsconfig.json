{
    "compilerOptions": {
        "incremental": true,
        "target": "es2021",
        "module": "commonjs",
        "lib": [
            "dom",
            "es2021"
        ],
        "jsx": "react-jsx",
        "strict": true,
        "sourceMap": true,
        "baseUrl": "./lib",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "outDir": "./lib",
        "noImplicitAny": false,
        "strictNullChecks": false
    },
    "include": [
        "./lib"
    ],
    "exclude": [
        "test",
        "release/build",
        "release/app/dist",
        ".erb/dll"
    ]
}