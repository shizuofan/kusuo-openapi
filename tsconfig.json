{
    "compilerOptions": {
        "incremental": true,
        "target": "es2021",
        "module": "commonjs",
        "lib": [
            "dom",
            "es2021"
        ],
        "strict": true,
        "sourceMap": true,
        "baseUrl": "./src",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "outDir": "./lib",
        // "suppressImplicitAnyIndexErrors": true,
        "noImplicitAny": false,
        "strictNullChecks": false,
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "test",
        "release/build",
        "release/app/dist",
        ".erb/dll"
    ],
    "extends": [
        "tslint:recommended",
        "tslint-config-prettier"
    ]
}